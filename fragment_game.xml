    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fairlynguyen.demoproject.fragment.GameFragment">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game" />

    <com.example.fairlynguyen.demoproject.widget.PullToRefreshListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.fairlynguyen.demoproject.widget.PullToRefreshListView>
</LinearLayout>
